---
interface OpenringItem {
  title: string;
  link: string;
  summary: string;
  source_title: string;
  source_link: string;
  date: string;
}

// Mock data or import from actual openring data
const _openring: OpenringItem[] = [
  // Add your openring data here or import from a data file
];
---

<section class="webring">
  <h3 class="title mb-4 text-xl">On the Web</h3>
  <section class="-m-2 flex flex-wrap">
    <div class="columns is-tablet is-centered">
      {
        _openring.map(({ title, link, summary, source_title, source_link, date }) => (
          <div class="column is-4">
            <div class="tile is-ancestor">
              <div class="tile is-parent">
                <article class="tile is-child box is-shadowless m-2 flex min-w-40 flex-col flex-wrap  p-2">
                  <h2 class="title m-0 mb-4 text-xl">
                    <a href={link} target="_blank" rel="noopener" class="serif is-size-4">
                      {title}
                    </a>
                  </h2>
                  <p class="flex text-sm">{summary}</p>
                  <small class="source is-block">
                    by <a href={source_link}>{source_title}</a>
                  </small>
                  <small class="date has-text-grey-dark">{date}</small>
                </article>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <p class="attribution has-text-right text-right text-sm text-[#555]">
    Generated by <a href="https://git.sr.ht/~sircmpwn/openring">Open Ring</a>
  </p>
</section>
