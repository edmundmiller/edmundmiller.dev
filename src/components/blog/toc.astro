---
import type { MarkdownHeading } from 'astro';
import { generateToc } from 'src/utils/generate-toc';

interface Props {
  headings: MarkdownHeading[];
}

const { headings } = Astro.props as Props;

const _toc = generateToc(headings);
---

<aside class="sticky top-20 order-2 -me-32 hidden basis-64 lg:block">
  <h2 class="font-semibold">Table of Contents</h2>
  <ul class="mt-4 text-xs">
    {_toc.map((heading) => <TOCHeading heading={heading} />)}
  </ul>
</aside>
